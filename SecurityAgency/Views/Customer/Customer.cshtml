<link href="~/Content/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
<script src="~/Scripts/AppJs/Customer.js"></script>
<div class="contentpanel">
    <div class="row">
        <div class="col-md-12">
            <div class="row" style="background:#19AFC6;">
                <div class="col-md-6"><h5 class="adminhead">Customer Details</h5></div>
                <div class="col-md-6 text-right">
                    @{if (@ViewBag.CreatePermission != null)
                        {
                            <button class="btn btn-default btn-xs mt5 mb-xs hid" onclick="CreateUpdateCustomerPopup(0)">Create Customer</button>
                        }
                    }
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table id="tblCustomer" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>ContactNo</th>
                            <th>Hourly Rate</th>
                            <th>Created On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
