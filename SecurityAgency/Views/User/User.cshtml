@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="~/Content/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/AppJs/User.js"></script>
<div class="contentpanel">
    <div class="row">
        <div class="col-md-12">
            <div class="row" style="background:#19AFC6;">
                <div class="col-md-6"><h5 class="adminhead">User Details</h5></div>
                <div class="col-md-6 text-right">
                    @{if (@ViewBag.CreatePermission)
                        {
                            <button class="btn btn-default btn-xs mt5 mb-xs" onclick="CreateUpdateUserPopup(0)">Create User</button>
                        }
                    }
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table id="tblUser" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>ContactNo</th>
                            <th>Zip</th>
                            <th>Created On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
