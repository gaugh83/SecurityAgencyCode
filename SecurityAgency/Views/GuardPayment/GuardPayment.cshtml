@{
    ViewBag.Title = "Guard Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
<script src="~/Scripts/AppJs/GuardPayment.js"></script>
<div class="contentpanel">
    <div class="row">
        <div class="col-md-12">
            <div class="row" style="background:#19AFC6;">
                <div class="col-md-6"><h5 class="adminhead">Guard Payment Details</h5></div>
                <div class="col-md-6 text-right">
                    @{if (@ViewBag.CreatePermission)
                        {
                            <button class="btn btn-default btn-xs mt5 mb-xs hid" onclick="CreateUpdateGuardPaymentPopup(0)">Add Guard Payment</button>
                        }
                    }
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table id="tblGuard" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Guard Name</th>
                            <th>Payment Date</th>
                            <th>Amount</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
