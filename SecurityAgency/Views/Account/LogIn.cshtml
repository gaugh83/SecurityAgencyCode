@model SecurityAgency.Common.ViewModels.UserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="/Content/Login.css" rel="stylesheet" />
<body class="signin">
    <section>
        <div class="logo text-center" style="margin-top: 60px;">
            <img src="/images/Logo_Nor_Cal.png" alt="Chain Logo">
        </div>
        <div class="panel panel-signin" style="margin-top:43px !important;">
            <div class="panel-body">
                @*<div class="logo text-center">
                        <img src="/images/logo.png"  alt="Chain Logo">
                    </div>*@
                <br />
                <h4 class="text-center">Sign in to your account</h4>

                <div class="mb30"></div>
                @using (Html.BeginForm("LogIn", "Account", FormMethod.Post, null))
                {
                    @Html.ValidationSummary(true)
                    <div class="mb15">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Username" })
                    </div><!-- input-group -->


                    <div class="mb15">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                    </div><!-- input-group -->


                    <div class="clearfix">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-success">Sign in <i class="fa fa-angle-right ml5"></i></button>
                        </div>
                    </div>

                }
                <div class="clearfix">
                    <br />
                    @*@Html.ActionLink("Forgot Password", "ForgotPassword")*@
                </div>
            
           
        </div><!-- panel -->
        </div>
    
    </section>


    

   

</body>
